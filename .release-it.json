{
  "git": {
    "tagName": "v${version}",
    "commitMessage": "Release ${version}",
    "requireCleanWorkingDir": true
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}"
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "after:bump": "node tools/update-version-refs.js ${version}"
  }
}
